{
	"excludes": [
		"**/node_modules",
		"**/*-lock.json",
		"**/package.json",
		"CHANGELOG.md"
	],

	"plugins": [
		"https://plugins.dprint.dev/json-0.19.4.wasm",
		"https://plugins.dprint.dev/markdown-0.17.8.wasm",
		"https://plugins.dprint.dev/typescript-0.93.3.wasm"
	],

	"lineWidth": 160,
	"indentWidth": 2,
	"newLineKind": "lf",
	"useTabs": true,

	"json": {
		"jsonTrailingCommaFiles": [
			".vscode/extensions.json",
			".vscode/settings.json",
			"jsconfig.json"
		]
	},

	"typescript": {
		"preferSingleLine": false,
		"quoteProps": "asNeeded",
		"quoteStyle": "preferSingle",

		"exportDeclaration.sortNamedExports": "caseSensitive",
		"importDeclaration.sortNamedImports": "caseSensitive",
		"module.sortExportDeclarations": "caseSensitive",
		"module.sortImportDeclarations": "caseSensitive",

		"arguments.trailingCommas": "never",
		"parameters.trailingCommas": "never",

		"arrowFunction.useParentheses": "force",

		"useBraces": "always",
		"ifStatement.useBraces": "whenNotSingleLine"
	}
}
