{
  "name": "@pcdevil/wordoftheday",
  "version": "0.0.0",
  "description": "A Mastodon \"Word of the Day\" bot.",
  "private": true,
  "type": "module",
  "files": [
    "src",
    "!src/**/*.test.mjs"
  ],
  "imports": {
    "#lib": "./src/lib/index.mjs",
    "#lib/*": "./src/lib/*",
    "#src/*": "./src/*",
    "#util": "./src/util/index.mjs",
    "#util/*": "./src/util/*"
  },
  "scripts": {
    "lint": "eslint --ext .js,.mjs --ignore-path .gitignore .",
    "lint:fix": "npm run lint -- --fix",
    "start": "node src/cli.mjs",
    "style": "dprint check",
    "style:fix": "dprint fmt",
    "test": "node --test 'src/**/*.test.mjs'",
    "test:watch": "node --test --watch 'src/**/*.test.mjs'"
  },
  "engines": {
    "node": "^21.7.1",
    "npm": "^10.5.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pcdevil/wordoftheday.git"
  },
  "author": "Attila Gonda (https://attilagonda.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pcdevil/wordoftheday/issues"
  },
  "homepage": "https://github.com/pcdevil/wordoftheday#readme",
  "packageManager": "pnpm@9.1.2+sha256.19c17528f9ca20bd442e4ca42f00f1b9808a9cb419383cd04ba32ef19322aba7",
  "dependencies": {
    "dotenv": "^16.4.5",
    "htmlparser2": "^9.1.0",
    "pino": "^8.19.0",
    "pino-pretty": "^10.3.1"
  },
  "devDependencies": {
    "dprint": "~0.45.0",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1"
  }
}
